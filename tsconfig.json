{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx", // "react" 대신 사용
    "jsxImportSource": "react", // Emotion 대신 React를 사용
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@ComponentFarm/*": ["./src/components/*"],
      "@ApiFarm/*": ["./src/api/*"],
      "@InterfaceFarm/*": ["./src/interface/*"],
      "@UtilFarm/*": ["./util/*"],
      "@HookFarm/*": ["./src/hook/*"],
      "@MobxFarm/*": ["./src/mobx/*"],
      "@PagesFarm/*": ["./pages/*"],   
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "component/chart/BarCharts.stories.tsx",
    "component/modal/mailSendPopup.stories.bak"
  ],
  "exclude": ["node_modules"]
}
